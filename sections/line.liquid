<div
  id="line-{{ section.id }}"
  class="line {% if section.settings.full_width %}container-full-width{% else %}page-width{% endif %}"
></div>

<style>
  #line-{{ section.id }} {
      display: block !important;
      border-width: {{ section.settings.height }}px 0 0;
      border-style: {{ section.settings.style }};
      border-color: {{ section.settings.color_line }};
      margin-top: 1.5rem;
      margin-bottom: 1.5rem;
  }

  @media screen and (min-width: 990px) {
    #line-{{ section.id }} {
      margin-top: {{ section.settings.padding_top }}px;
      margin-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Line",
  "class": "section-line",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    },
    {
      "type": "color",
      "id": "color_line",
      "label": "Line color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "height",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Line height",
      "default": 1
    },
    {
      "type": "select",
      "id": "style",
      "label": "Line style",
      "options": [
        {
          "value": "solid",
          "label": "Solid"
        },
        {
          "value": "dotted",
          "label": "Dotted"
        },
        {
          "value": "dashed",
          "label": "Dashed"
        },
        {
          "value": "double",
          "label": "Double"
        }
      ],
      "default": "solid"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Line"
    }
  ]
}
{% endschema %}
